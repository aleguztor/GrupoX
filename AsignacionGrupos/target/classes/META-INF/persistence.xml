<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="AsignacionGrupos" transaction-type="RESOURCE_LOCAL">
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>GrupoX.AsignacionGrupos.Alumno</class>
		<class>GrupoX.AsignacionGrupos.Asignatura</class>
		<class>GrupoX.AsignacionGrupos.Centro</class>
		<class>GrupoX.AsignacionGrupos.Encuesta</class>
		<class>GrupoX.AsignacionGrupos.Expediente</class>
		<class>GrupoX.AsignacionGrupos.Clase</class>
		<class>GrupoX.AsignacionGrupos.Grupo</class>
		<class>GrupoX.AsignacionGrupos.Matricula</class>
		<class>GrupoX.AsignacionGrupos.Titulacion</class>
		<class>GrupoX.AsignacionGrupos.Grupos_Por_Asignatura</class>
		<class>GrupoX.AsignacionGrupos.Optativa</class>
		<class>GrupoX.AsignacionGrupos.Asignaturas_matriculas</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.schema-generation.scripts.action" value="create"/>
			<property name="javax.persistence.schema-generation.scripts.create-target" value="nuevo-esquema.sql"/>
		</properties>
	</persistence-unit>
</persistence>
